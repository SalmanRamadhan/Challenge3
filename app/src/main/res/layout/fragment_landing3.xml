<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.LandingFragment3">

   <ImageView
       android:id="@+id/ivLandingImage3"
       android:layout_width="wrap_content"
       android:layout_height="200dp"
       android:src="@drawable/ic_landing_page3"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"/>

   <TextView
       android:layout_width="0dp"
       android:layout_height="wrap_content"
      android:text="@string/landing_title_3"
       android:layout_marginTop="50dp"
      app:layout_constraintTop_toTopOf="@id/ivLandingImage3"
      app:layout_constraintStart_toStartOf="@id/ivLandingImage3"
      app:layout_constraintEnd_toEndOf="@id/ivLandingImage3"
      app:layout_constraintBottom_toBottomOf="parent"
      style="@style/landing_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>