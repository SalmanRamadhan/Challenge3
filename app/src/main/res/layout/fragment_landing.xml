<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".fragment.LandingFragment">

    <ImageView
        android:id="@+id/ivLandingImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/ic_landing_page1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/landing_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/landing_title_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ivLandingImage"
        app:layout_constraintStart_toStartOf="@id/ivLandingImage"
        app:layout_constraintTop_toTopOf="@id/ivLandingImage" />


</androidx.constraintlayout.widget.ConstraintLayout>